<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1 class="center">Neuen Vertrag erstellen</h1>
        <div class="widthauto">
              <form action="/contracts" method="POST">
                <div class="form-group">
                    <label>Vertragsname/-nummer:</label>
                    <input class="form-control" type="text" name="contract[title]" placeholder="title">
                </div>
                <div class="form-group">
                    <label>Kontaktperson:</label>
                    <!-- <select> -->
                        <!-- <option value="Kontaktperson" selected="true" disabled="disabled">Kontaktperson</option>
                        <% contracts.forEach((contract) => { %>
                            <option value="<%= contract.contactPerson %>"><%= contract.contactPerson %></option>
                        <%}); %>
                    </select> -->
                    <input class="form-control" type="text" name="contract[contactPerson]" placeholder="Contract Person">
                    <!--TODO: drop down menu with contacts - contact needs to be created-->
                </div>
                <div class="form-group">
                    <label>Zuständig:</label>
                    <select>
                        <option selected="true" disabled="disabled">Zuständiger</option>
                        <% user.forEach((users) => { %>
                            <option value="<%=users%>"><%= users.username %></option>
                        <%}); %>
                    </select>
                    <!-- <input class="form-control" type="text" name="contract[inCharge]" placeholder="Person who is in charge"> -->
                    <!--TODO: drop down menu with users-->
                </div>
                <div class="form-group">
                    <label>Kategorie:</label>
                    <input class="form-control" type="text" name="contract[category]" placeholder="Kategorie">
                </div>
                <div class="form-group">
                    <label>Vertragsende:</label>
                    <input class="form-control" type="date" name="contract[expiration]" placeholder="month/day/year">
                </div>
                <div class="form-group">
                    <label>Erinnerungsdatum:</label>
                    <input class="form-control" type="date" name="contract[reminderDate]" placeholder="month/day/year">
                </div>
                <input class="btn btn-lg btn-primary btn-block" type="submit">
            </form>
            <a href="/">Zurück</a>
        </div>  
    </div>
</div>


<% include ./partials/footer %>
