<% include ./partials/header %>

<div class="container">
    <div class="row">
        <h1><%=contract.title%> bearbeiten</h1>
        <div style="width:30%; margin: 25px auto">
            <form action="/contracts/<%=contract._id%>?_method=PUT", method="POST">
                <div class="form-group">
                    <label>Vertragsname/-nummer:</label>
                    <input class="form-control" type="text" name="contract[title]" value="<%=contract.title%>">
                </div>
                <div class="form-group">
                    <label>Kontaktperson:</label>
                    <input class="form-control" type="text" name="contract[contactPerson]" value="<%=contract.contactPerson%>">
                </div>
                <div class="form-group">
                    <label>Kategorie:</label>
                    <input class="form-control" type="text" name="contract[category]" value="<%=contract.category%>">
                </div>
                <div class="form-group">
                    <label>Verantwortlicher:</label>
                    <input class="form-control" type="text" name="contract[inCharge]" value="<%=contract.inCharge%>">
                </div>
                <div class="form-group">
                    <label>Vertragsende:</label>
                    <input class="form-control" type="text" name="contract[expiration]" value="<%=contract.expiration.toDateString()%>">
                </div>
                <div class="form-group">
                    <label>Erinnerungsdatum:</label>
                    <input class="form-control" type="text" name="contract[reminderDate]" value="<%=contract.reminderDate.toDateString()%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/contracts">ZurÃ¼ck</a>
        </div>
    </div>
</div>

<% include ./partials/footer %>
